{
    "name": "OpenWorld",
    "type": "library",
    "description": "World's internationalization library. Get and format currencies, numbers, dates and more in nice and easy way. All data is provided by Unicode Common Locale Data Repository.",
    "keywords": [
		"localization",
        "l10n",
        "internationalization",
        "i18n",
        "translations",
        "translate",
        "php",
        "unicode",
        "cldr",
        "currency",
        "territories",
        "territory codes"
	],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey <Gino Pane> Karavay",
            "homepage": "http://sergey.karavay.name",
            "email": "sergey.karavay@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "squizlabs/php_codesniffer": "2.*",
        "phpmd/phpmd" : "@stable",
        "phpdocumentor/phpdocumentor" : "2.*"
    },
    "autoload": {
        "psr-4": {
            "OpenWorld\\": "src/"
        }
    }
}
